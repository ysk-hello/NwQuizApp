<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NwQuizApp.MainPage">

    <StackLayout>
        <Grid VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button x:Name="R06" Text="R06" Grid.Row="0" Grid.Column="0" Margin="10" Clicked="Button_Clicked"></Button>
            <Button x:Name="R05" Text="R05" Grid.Row="0" Grid.Column="1" Margin="10" Clicked="Button_Clicked"></Button>
            <Button x:Name="R04" Text="R04" Grid.Row="1" Grid.Column="0" Margin="10" Clicked="Button_Clicked"></Button>
            <Button x:Name="R03" Text="R03" Grid.Row="1" Grid.Column="1" Margin="10" Clicked="Button_Clicked"></Button>
        </Grid>
    </StackLayout>
</ContentPage>
